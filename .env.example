# Virtual Vacation Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =============================================================================
# ESSENTIAL APIs (Required for basic functionality)
# =============================================================================

# Google Maps Platform API Key (Free: 28,000 requests/month)
# Get yours at: https://console.cloud.google.com/google/maps-apis
# Required APIs: Maps JavaScript API, Street View Static API, Places API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenWeatherMap API Key (Free: 1,000 requests/day)
# Get yours at: https://openweathermap.org/api
VITE_OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# =============================================================================
# OPTIONAL APIS (Enhance experience but not required)
# =============================================================================

# Unsplash API for high-quality images (Free: 50 requests/hour)
# Get yours at: https://unsplash.com/developers
VITE_UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here

# News API for local news integration (Free: 1,000 requests/day)
# Get yours at: https://newsapi.org/
VITE_NEWS_API_KEY=your_news_api_key_here

# Mapbox API for additional map styles (Free: 50,000 requests/month)
# Get yours at: https://account.mapbox.com/
VITE_MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# Freesound.org API for ambient sounds (Free with registration)
# Get yours at: https://freesound.org/apiv2/
FREESOUND_API_KEY=your_freesound_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Configuration (Use Supabase free tier or local)
POSTGRES_DB=virtual_vacation
POSTGRES_USER=vacation_user
POSTGRES_PASSWORD=vacation_pass
DATABASE_URL=postgresql://vacation_user:vacation_pass@localhost:5432/virtual_vacation

# MongoDB Connection (Use MongoDB Atlas free tier)
MONGODB_URI=mongodb://localhost:27017/virtual_vacation
MONGODB_DB_NAME=virtual_vacation

# Redis Connection (Use Redis Cloud free tier)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=production
VITE_APP_ENV=production
REACT_APP_ENVIRONMENT=production

# Application URLs
VITE_API_BASE_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_FRONTEND_URL=http://localhost:3000

# Server Ports
PORT=5000
FRONTEND_PORT=3000
BACKEND_PORT=8000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret for authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Session Secret
SESSION_SECRET=your_session_secret_key_change_this_in_production

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics (Optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry for error tracking (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker Network Name
DOCKER_NETWORK_NAME=virtual_vacation_network

# Container Ports
CONTAINER_FRONTEND_PORT=3000
CONTAINER_BACKEND_PORT=8000
CONTAINER_MONGODB_PORT=27017
CONTAINER_REDIS_PORT=6379

# =============================================================================
# FREE APIs (No keys required - completely free)
# =============================================================================
# These APIs are used automatically and require no configuration:
# - REST Countries API (restcountries.com) - Completely free
# - Radio Garden API - Public API, no key needed
# - OpenStreetMap - Free and open source
# - Wikimedia APIs - Free public APIs

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# SSL Configuration (Production only)
SSL_CERT_PATH=
SSL_KEY_PATH=

# CDN Configuration (Production only)
VITE_CDN_URL=

# Production Domain
VITE_PRODUCTION_DOMAIN=temitayocharles.online

# =============================================================================
# INSTRUCTIONS
# =============================================================================
# 
# 1. Copy this file to .env: cp .env.example .env
# 2. Get your free API keys from the URLs provided above
# 3. Replace placeholder values with your actual keys
# 4. Never commit the .env file to version control
# 5. For production, use GitHub Secrets or environment variables
#
# REQUIRED for basic functionality:
# - VITE_GOOGLE_MAPS_API_KEY (Essential for maps and street view)
# - VITE_OPENWEATHER_API_KEY (Essential for weather data)
#
# All other variables are optional but enhance the experience
